<body>
   

    <table class="table">
        <tr>
            <td class="img-fluid img">
                <img src="~/images/cropped-Login.jpg" alt="" />
            </td>
            <td class="container-fluid form">
                <!-- Login Form-->
                <div>
                    <h4>Welcome Back :)</h4>
                    <small>Manage your finances by logging in with your personal information, username and password. <br /></small>
                </div>
              
                <div class="card">
                    <div class="card-body">
                        <form asp-action="IsCustomer" asp-controller="Default">
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="text" asp-for="Username" class="form-control" />
                                <label class="form-label" for="form2Example1">Username</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" asp-for="Password" class="form-control" />
                                <label class="form-label" for="form2Example2">Password</label>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col">
                                    <!-- Simple link -->
                                    <a asp-action="Forgot" asp-controller="Default">Forgot password?</a>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <input type="submit" value="Sign in" class="btn btn-primary btn-block mb-4"/>

                            <!-- Register buttons -->
                            <div class="text-center">
                                <p>Not a member? <a asp-action="Create" asp-controller="BankUsers" >Register</a></p>
                            </div>
                        </form>
                    </div>
                </div>


            </td>
        </tr>
    </table>






