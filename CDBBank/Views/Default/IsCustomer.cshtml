        .card{
            margin: 2rem 2rem;
            height: 350px;
            width: 350px;
        }
        
        img{
            height: 550px;
            width: 650px;
        }

        .img{
            width:60%;
        }

        .form{
            width: 38%;
            padding: 2.5rem 1.5rem; 
