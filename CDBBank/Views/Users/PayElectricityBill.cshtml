@{
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

@if (ViewBag.billpaid != null)
{
    <h4>@ViewBag.billpaid</h4>
}
else
{
<h1>ElectricityBill</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="PayElectricityBill">
            
            <div class="form-group">
                <label class="control-label">Consumer Number</label>
                <input class="form-control" type="text" name="consumerno"/>
            </div>
            <div class="form-group">
                <label class="control-label">Bill Number</label>
                <input type="text" name="billno" class="form-control" />
                
            </div>


            <div class="form-group">
                <input type="submit" value="Get Your Bill" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboard" asp-controller="Users">Back to Dashboard</a>
</div>

}